                        </ul>
                    </div>
                </nav>
                <div class="container-fluid">
                    <div class="card shadow">
                        <div class="card-header py-3">
                            <p class="text-primary m-0 fw-bold">Ordenes de compra</p>
                            <div class="d-sm-flex justify-content-between align-items-center mb-4">
                                <h3 class="text-dark mb-0">Panel</h3><button
                                    class="btn btn-primary btn-sm d-none d-sm-inline-block" role="button" href="#"
                                    onclick="insertarModal()"><i
                                        class="fas fa-download fa-sm text-white-50"></i>&nbsp;Crear
                                    Orden de compra</button>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive table mt-2" id="dataTable" role="grid" aria-describedby="dataTable_info">
                                <table class="table my-0" id="dataTable">
                                    <thead>
                                        <tr>
                                            <th>Id del Producto</th>
                                            <th>Fecha </th>
                                            <th>Cantidad</th>
                                            <th>Nombre</th>
                                            <th>Id Proveedor</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% orders.forEach(function(order) { %>
<tr id="order-<%=order.id %>"> 
                                        <td id="<%= order.id %>"><%= order.id %></td>
                                        <td><%= order.nombre %></td>
                                        <td><%= order.cantidad %></td>
                                        <td><%= order.fecha %></td>
                                        <td><%= order.id_proveedor %></td>
                                        <td><button
                                            class="btn btn-primary btn-sm d-none d-sm-inline-block" role="button" href="#"
                                            onclick="borrar(`<%= order.id %>`)"><i
                                                class="fas fa-download fa-sm text-white-50"></i>&nbsp;Borrar Order</button></td>
                                          
                                            <td><button
                                            class="btn btn-primary btn-sm d-none d-sm-inline-block" role="button" href="#"
                                            onclick="editorModal(`<%= order.nombre %>`,`<%= order.cantidad %>`,`<%= order.fecha %>`,`<%= order.id_proveedor %>`,`<%= order.id %>`)"><i
                                                class="fas fa-download fa-sm text-white-50"></i>&nbsp;Editar Order
                                            </button></td>
                                            </tr>

                                        
                                        <% }); %>

                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th>Id del Producto</th>
                                            <th>Fecha </th>
                                            <th>Cantidad</th>
                                            <th>Nombre</th>
                                            <th>Id Proveedor</th>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <footer class="bg-white sticky-footer">
                <div class="container my-auto">
                    <div class="text-center my-auto copyright"><span>Copyright Â© Brand 2023</span></div>
                </div>
            </footer>
        </div><a class="border rounded d-inline scroll-to-top" href="#page-top"><i class="fas fa-angle-up"></i></a>

        <div id="modal-2" class="modal fade " role="dialog" tabindex="-1" style="display: none;">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="titulo">Creacion de usuario</h4><button class="btn-close"
                            type="button" aria-label="Close" data-bs-dismiss="modal" on
                            onclick="cerrarModal()"></button>
                    </div>
                    <div class="modal-body">
                        <div class="mb-3"><input id="id" class="form-control form-control-user" type="text"
                                aria-describedby="emailHelp" placeholder="Id de la orden" name="email" disabled></div>

                        <div class="mb-3"><input id="nombre" class="form-control form-control-user" type="email"
                                aria-describedby="emailHelp" placeholder="Insertar Nombre..." name="text"></div>

                        <div class="mb-3"><input id="cantidad" class="form-control form-control-user" type="email"
                                aria-describedby="emailHelp" placeholder="Insertar Cantidad..." name="text"></div>

                        <div class="mb-3">
                            <select id="proveedor" class="form-control form-control-user" type="text"
                                aria-describedby="emailHelp" placeholder="Id de proveedor..." name="">
                                <% proveedores.forEach(function(proveedor) { %>
                                <option value="<%= proveedor.id %>"><%= proveedor.id %></option>
                                <% }); %>
                            </select>
                        </div>

                        <div class="mb-3"><input id="fecha" class="form-control form-control-user" type="date"
                                aria-describedby="emailHelp" placeholder="Insertar fecha..." name="fecha"></div>
                        
                    </div>
                    <div class="modal-footer"><button class="btn btn-light" type="button" data-bs-dismiss="modal"
                            onclick="cerrarModal()">Cerrar</button><button class="btn btn-primary" type="button"
                            id="modal-2-button">Guardar</button></div>
                </div>
            </div>
        </div>
    </div>
